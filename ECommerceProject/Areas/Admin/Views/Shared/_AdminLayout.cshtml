<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Zone</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="shortcut icon" type="image/png" href="~/Styles/img/logo.png">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Admin/Home" class="navbar-brand">Dashboard</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#">Vendors</a></li>
                    <li><a href="#">Collections</a></li>
                    <li><a href="#">Products</a></li>
                    <li><a href="#">Pages</a></li>
                    <li class="dropdown" data-admin-menu>
                        <a href="#">
                            Analytics
                            <span class="glyphicon glyphicon-chevron-down"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header">Analytics Tab</li>
                            <li class="divider" />
                            <li><a href="#">&nbsp;&nbsp;Action A</a></li>
                            <li><a href="#">&nbsp;&nbsp;Action B</a></li>
                            <li><a href="#">&nbsp;&nbsp;Action C</a></li>
                            <li><a href="#">&nbsp;&nbsp;Action D</a></li>
                            <li><a href="#">&nbsp;&nbsp;Action E</a></li>
                            <li class="divider" />
                        </ul>
                    </li>
                </ul>
                <ul class="navbar-right">
                    <li>
                        <a href="/" class="navbar-brand" target="_blank">
                            Go to Home Page
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <!--To load all scripts from our own bundle-->
    @*@Scripts.Render("~/bundles/scripts")*@
    <script src="~/Scripts/jquery-1.9.0.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap/js/bootstrap.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
