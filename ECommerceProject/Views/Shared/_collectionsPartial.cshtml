    <div class="row collections__row">
        @foreach (var item in Model)
        {
            <div class="col-1-of-3 collections__col">
                <img src="~/Images/Uploads/Collections/@item.Id/@item.ImageUrl" alt="Sample Collection" class="collections__img" />
