<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width initial-scale=1.0" />
    <title>@ViewBag.Title | E-Commerce Project</title>
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower|Nunito+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Styles/css/linea_font.css">
    <link rel="stylesheet" href="~/Styles/css/style.css">
    <link rel="shortcut icon" type="image/png" href="~/Styles/img/logo.png">
    @*<link rel="stylesheet" href="Scripts/bootstrap/css/bootstrap.css">*@
    @*@Styles.Render("~/Styles/CSS")*@

</head>
<body>

    <div class="navigation">
        <input type="checkbox" class="navigation__checkbox" id="navi-toggle" />

        <label for="navi-toggle" class="navigation__button">
            <span class="navigation__icon">&nbsp;</span>
        </label>

        <div class="navigation__background">&nbsp;</div>

        <div class="navigation__nav">
            <ul class="navigation__list">
                <li class="navigation__item"><a href="#" class="navigation__link">Women Collection</a></li>
                <li class="navigation__item"><a href="#" class="navigation__link">Kids Collection</a></li>
                <li class="navigation__item"><a href="#" class="navigation__link">Men Collection</a></li>
                <li class="navigation__item"><a href="#" class="navigation__link">Accessories</a></li>
                <li class="navigation__item"><a href="#" class="navigation__link">Purses</a></li>
                <li class="navigation__item"><a href="#" class="navigation__link">Sun Glasses</a></li>
                <li class="navigation__item"><a href="#" class="navigation__link">Promotions</a></li>
                <li class="navigation__item"><a href="#" class="navigation__link">About us</a></li>
                <li class="navigation__item"><a href="#" class="navigation__link">Contact us</a></li>
                <li class="navigation__item"><a href="#" class="navigation__link">Our Story</a></li>
            </ul>
        </div>
    </div>
    <main>
        <section class="main-header">
            <div class="header">
                <div class="header__logo-box">
                    <img src="~/Styles/img/logo.png" alt="" class="header__logo" />
                </div>
                <div class="header__content">
                    <div class="header__primary">Casual Shop</div>
                    <div class="header__secondary u-margin-bottom-medium">Your Destination for Casual wear</div>
                    <p class="header__quote">You won't regret it!</p>
                </div>
            </div>
        </section>

        <!--This is the main content of Landing Page (rendered in Home page)-->
        <div>
            @RenderBody()
        </div>

        <div class="section-footer">
            <footer>
                <div class="footer">
                    <div class="row footer__row">
                        <div class="col-1-of-3">
                            <div class="footer__links">
                                <ul class="footer__list">
                                    <li class="footer__item">
                                        <a href="#" class="footer__anchor">Home</a>
                                    </li>
                                    <li class="footer__item">
                                        <a href="#" class="footer__anchor">Featured Items</a>
                                    </li>
                                    <li class="footer__item">
                                        <a href="#" class="footer__anchor">Promotions</a>
                                    </li>
                                    <li class="footer__item">
                                        <a href="#" class="footer__anchor">Collections</a>
                                    </li>
                                    <li class="footer__item">
                                        <a href="#" class="footer__anchor">Our Story</a>
                                    </li>
                                    <li class="footer__item">
                                        <a href="#" class="footer__anchor">Vision</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-1-of-3">
                            <div class="footer__logo">
                                <img src="~/Styles/img/logo.png" alt="" class="footer__logo--img" />
                            </div>
                        </div>
                        <div class="col-1-of-3">
                            <div class="footer__copy">
                                <div class="footer__copy--text">
                                    This Website is for <a href="#" class="footer__anchor">Demo purposes only</a>, designed and developed from scratch by Wassim Ibrahim. It is not for public use.
                                    <p>All Copy rights are reserved &copy;</p>
                                    <p>@DateTime.Now.Year - <a href="#" class="footer__anchor">Wassim Ibrahim</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="footer__contact">
                            <div class="col-1-of-3">
                                <i class="footer__icon icon-basic-headset"></i>
                                <span><a href="#" class="footer__anchor">Call Us</a></span>
                            </div>
                            <div class="col-1-of-3">
                                <i class="footer__icon icon-basic-mail-open-text"></i>
                                <span><a href="#" class="footer__anchor">Email</a></span>
                            </div>
                            <div class="col-1-of-3">
                                <i class="footer__icon icon-basic-magnifier"></i>
                                <span><a href="#" class="footer__anchor">Send Inquiry</a></span>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </main>

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap/js/bootstrap.js" type="text/javascript"></script>
</body>
</html>
