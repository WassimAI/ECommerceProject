@model IEnumerable<ECommerceProject.Models.ViewModels.ProductVM>

@if (Model.Count() == 0)
{
    <div style="display: none"></div>
}
else
{

    var item1 = Model.ElementAt(0);
    var item2 = Model.ElementAt(1);

    <div class="promotions" id="promotions">

        <div class="heading-primary u-margin-bottom-medium">Current Promotions</div>

        <div class="row promotions__row">
            <div class="promotions__left">
                <div class="promotions__left--description">
                    <p>@item1.Description</p>
                </div>
                <div class="promotions__left--description promotions__left--price">
                    Was at <span class="promotions__left--price-old">$@item1.oldPrice</span>
                </div>
                <div class="promotions__left--description promotions__left--price">
                    Now at <span class="promotions__left--price-new">$@item1.newPrice</span>
                </div>
                <div class="promotions__left--button">
                    <a href="#" class="btn btn--buy">Buy <span>Now</span></a>
                </div>
            </div>
            <div class="promotions__right">
                <div class="promotions__img">
                    <img src="~/Images/Uploads/Products/@item1.Id/@item1.ImageUrl" alt="promo-1" />
                </div>
            </div>
        </div>

        <div class="row promotions__row">
            <div class="promotions__left">
                <div class="promotions__left--description">
                    <p>@item2.Description</p>
                </div>
                <div class="promotions__left--description promotions__left--price">
                    Was at <span class="promotions__left--price-old">$@item2.oldPrice</span>
                </div>
                <div class="promotions__left--description promotions__left--price">
                    Now at <span class="promotions__left--price-new">$@item2.newPrice</span>
                </div>
                <div class="promotions__left--button">
                    <a href="#" class="btn btn--buy">Buy <span>Now</span></a>
                </div>
            </div>
            <div class="promotions__right">
                <div class="promotions__img">
                    <img src="~/Images/Uploads/Products/@item2.Id/@item2.ImageUrl" alt="promo-1" />
                </div>
            </div>
        </div>


        <div class="row promotions__row-btn u-margin-top-small">
            <div class="promotions__see-all-button">
                <a href="/Product/promotions" class="btn btn--secondary">See all Promotions &rarr;</a>
            </div>
        </div>

    </div>
}