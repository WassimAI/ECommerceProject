@model IEnumerable<ECommerceProject.Models.ViewModels.ProductVM>

@{
    ViewBag.Title = "FeaturedProducts";
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}

@{
    //int count = Model.Count();
    int count = 0;
}

<div class="heading-primary">Featured Products</div>

<div class="featured">

    @foreach (var item in Model)
    {
        if ((count % 2) == 0)
        {
            @:<div class="row">
        }

        <div class="col-1-of-2 featured__item">

            <div class="featured__left">
                <div class="featured__left--img">
                    <a href="#">
                        <img src="~/Images/Uploads/Products/@item.Id/@item.ImageUrl" alt="featured-product" />
                    </a>
                </div>
            </div>
            <div class="featured__right">
                <div class="featured__right--description">@item.Description</div>
                <div class="featured__right--price">$ @item.newPrice</div>
                @if (item.isOnSale == true)
                {
                    <div class="featured__right--discount">
                        <p>
                            This item is on sale, previous price:
                            <span class="featured__right--oldprice">$ @item.oldPrice</span>
                    </p>
                </div>
                }
                <div class="featured__right--buy">
                    <a href="#" class="btn btn--cart">Add To Cart</a>
                </div>
            </div>
        </div>

        if (count == 1)
        {
            count = 0;
            @:</div>
        }
        else
        {
            count++;
        }
    }

</div>
